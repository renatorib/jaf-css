// Headings
h1, h2, h3, h4, h5, h6
    font-family $font-family
    margin-top 5px
    margin-bottom 15px

    &.no-margin
        margin-top 0
        margin-bottom 0

    &.no-margin-top
        margin-top 0

    &no-margin-bottom
        margin-bottom 0


h1
    font-size 36px

h2
    font-size 28px

h3
    font-size 24px

h4
    font-size 20px

h5
    font-size 16px

h6
    font-size 14px
